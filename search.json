---
layout: null
---
[
  {% for post in site.posts %}
  {
    "title": {{ post.title | jsonify }},
    "url": "{{ post.url | relative_url }}",
    "date": "{{ post.date | date: '%d %b %Y' }}",
    "categories": {{ post.categories | join: ', ' | jsonify }},
    "tags": {{ post.tags | join: ', ' | jsonify }},
    "content": {{ post.content | strip_html | truncatewords: 100 | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  {% for page in site.pages %}
  {% if page.title and page.url != '/404.html' and page.url != '/search.json' %}
  {% unless site.posts.size == 0 %},{% endunless %}
  {
    "title": {{ page.title | jsonify }},
    "url": "{{ page.url | relative_url }}",
    "date": "",
    "categories": "",
    "tags": "",
    "content": {{ page.content | strip_html | truncatewords: 100 | jsonify }}
  }
  {% endif %}
  {% endfor %}
]
